
@model IEnumerable<M3dina.Models.PatientDetails>  
<div class="table-responsive">
 

                            <table class="table table-hover">
                                <thead>
                                    <tr>                                       
                                        <th>Media</th>
                                        <th>Patient ID</th>
                                        <th>Name</th>
                                        <th>Gender</th>
                                         <th class="hidden-sm">Current Facility</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
             @foreach (var item in Model) {
                                    <tr>
                                        <td><span class="list-icon"><img class="patients-img" src="assets/images/xs/avatar1.jpg" alt=""></span></td>
                                        <td><span class="list-name">@Html.DisplayFor(modelItem => item.PatientID)</span></td>
                                        <td>@Html.DisplayFor(modelItem => item.Patient.GivenName) @Html.DisplayFor(modelItem => item.Patient.FamilyName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Patient.Gender)</td>
                                   
                                        <td class="hidden-sm">@Html.DisplayFor(modelItem => item.currentFacility)</td>
                                        <td><span class="label label-info">New</span></td>
                                    </tr>
            }
                                   
                                </tbody>
                            </table>
    <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>PATIENTS Status</h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">
                        <p><span class="label label-success">3 Admit</span>
                            <span class="label label-default">2 Discharge</span>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>PATIENTS</th>
                                        <th>ADDRESS</th>
                                        <th>START DATE</th>
                                        <th>END DATE</th>
                                        <th>PRIORITY</th>
                                      
                                        <th>STATUS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                 @foreach (var item in Model) {
                            <tr onclick="location.href = '@(Url.Action("PatientProfile", "Patient", new { ID = item.PatientID }))'">
                                        <td>1</td>
                                        <td><img src="assets/images/xs/avatar3.jpg" class="rounded-circle width30 m-r-15" alt="profile-image"><span>@Html.DisplayFor(modelItem => item.Patient.GivenName) @Html.DisplayFor(modelItem => item.Patient.FamilyName)</span></td>
                                        <td><span class="text-info"> @Html.DisplayFor(modelItem => item.PatientAddress.AddressLine1) @Html.DisplayFor(modelItem => item.PatientAddress.AddressLine2) @Html.DisplayFor(modelItem => item.PatientAddress.City), @Html.DisplayFor(modelItem => item.PatientAddress.State) @Html.DisplayFor(modelItem => item.PatientAddress.PostalCode)</span></td>
                                        <td>Sept 13, 2017</td>
                                        <td>Sept 16, 2017</td>
                                        <td><span class="label label-warning">MEDIUM</span></td>
                                       
                                        <td><span class="label label-success">Admit</span></td>
                                    </tr>
                            }
                                   
                                </tbody>
                            </table>
                        </div>                            
                    </div>
                </div>
            </div>
                        </div>