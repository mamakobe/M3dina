
@model IEnumerable<M3dina.Models.Facility>  

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group">  

  
     
 @Html.ActionLink("Add Facility", "Create", "Facility")
    

  
  <br/>
        <table class="table table-responsive" style="width:400px">  
            <tr>  
                <th>  
                    @Html.DisplayNameFor(model => model.facilityId)  
                </th>  
                <th>  
                    @Html.DisplayNameFor(model => model.email)  
                </th>  
             <th>  
                    @Html.DisplayNameFor(model => model.facilityName)  
                </th> 
             
                  
            </tr>  
  
            @foreach (var item in Model) {  
                <tr>  
                    <td>  
                        @Html.DisplayFor(modelItem => item.facilityId)  
                    </td>  
                    <td>  
                        @Html.DisplayFor(modelItem => item.email)  
                    </td>  
                     <td>  
                        @Html.DisplayFor(modelItem => item.facilityName)  
                    </td> 
                     
                      
                </tr>  
}  
  
        </table>  
    </div>  





